extends ../layout

block head
    script(type='text/javascript').
        var params = '#{jsParams}' ? !{JSON.stringify(jsParams)} : undefined;
    script(type='text/javascript' src='/javascripts/ingredient.js')
    script(type='text/javascript' src='/javascripts/resource.js')
    script(type='text/javascript' src='/javascripts/edit_process.js')

block content
    section(class="")
        div(class='row')
            div(class='col-md-12')
                form(method="post", action="/addprocess")
                    div(class='row')
                        div(class='col-md-6')
                            div(class='row')
                                div(class='col-md-12 process-head')
                                    div(class='box-container')
                                        div(class='box-inner')
                                            include ./process_head.jade
                            
                            div(class='row')
                                div(class='col-md-12 instruction-step-list')
                                    div(class='box-container')
                                        div(class='box-inner')
                                            include ./instruction_step_list.jade
                                            
                        div(class='col-md-6')
                            div(class='row')
                                div(class='col-md-12 add-instruction-step')
                                    div(class='box-container')
                                        div(class='box-inner')
                                            include ./add_instruction_step.jade
                                            
                    div(class='row')
                        div(class='col-md-12  new-recipe-submit')
                            div(class='box-container')
                                div(class='box-inner')
                                    input(type="submit" class="submit-add-recipe form-control" value="submit")
                    
        div(class='row')
            div(class='col-md-6 available-ingredient-list')
                div(class='box-container')
                    div(class='box-inner')
                        h2 available ingredients
                        ul.available-ingredient-list
                            if availableIngredientList
                                each object, i in availableIngredientList
                                    li
                                        include ../ingredient/ingredient_box.jade
                                    
            div(class='col-md-6 available-resource-list')
                div(class='box-container')
                    div(class='box-inner')
                        h2 available resources
                        ul.available-resource-list
                            if availableResourceList
                                each object, i in availableResourceList
                                    li
                                        include ../resource/resource_box.jade

        div(class='row')
            div(class='col-md-6 new-ingredient')
                div(class='box-container')
                    div(class='box-inner')
                        include ../ingredient/new_ingredient.jade

            div(class='col-md-6 new-resource')
                div(class='box-container')
                    div(class='box-inner')
                        include ../resource/new_resource.jade
                