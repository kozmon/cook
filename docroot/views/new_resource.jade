form.form-new-resource(name="new-resource", method="post", action="/newresource", enctype="multipart/form-data")
    h2 new resource
    div.input
        span.label name
        input(type="text", name="name")
    div.input
        span.label description
        input(type="text", name="description")
    div.input
        span.label image
        input(type="file", name="image")
    div.actions
        input(type="submit", value="add new resource")
